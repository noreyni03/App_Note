<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="#efeded"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:tint="#000000"
        app:backgroundTint="#ffffff"
        app:rippleColor="#000000"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="SimpleBlog" />

    <TextView
        android:id="@+id/articleTitleTextView"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="130dp"
        android:text="Article 1"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="190dp"
        android:text="Ecrit par Jordan Boissy" />

    <TextView
        android:id="@+id/articleDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginTop="190dp"
        android:textColor="#000000"
        android:text="21/05/2023" />

    <TextView
        android:id="@+id/articleDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="230dp"
        android:text="TextView" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
